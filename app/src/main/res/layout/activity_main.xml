<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eekuvliev.businesslayout.MainActivity">
    <ImageView
        android:background="@drawable/yum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:layout_editor_absoluteY="1dp"
        tools:layout_editor_absoluteX="1dp"/>

        <TextView
            android:id= "@+id/invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "Eat at the"
            android:textSize= "55dp"
            android:textColor= "@color/blu"
            android:fontFamily= "cursive"
            android:padding="10dp"
            tools:layout_editor_absoluteY="1dp"
            tools:layout_editor_absoluteX="1dp" />
        <ImageView
            android:id= "@+id/logo"
            android:src= "@drawable/tacoLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf= "@id/invitation"
            android:padding= "8dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="190dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/invitation"
            android:text="Location:"
            android:textColor="Black"
            android:textSize="40dp"
            tools:layout_editor_absoluteY="88dp"
            tools:layout_editor_absoluteX="0dp" />
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="315 S Limestone, Lexington, KY 40508"
            android:textColor="@color/ltGreen"
            android:textSize="20dp"
            tools:layout_editor_absoluteY="140dp"
            tools:layout_editor_absoluteX="0dp" />
        <ImageView
            android:src= "@drawable/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="110dp"
            tools:layout_editor_absoluteX="0dp"/>

        </RelativeLayout>


